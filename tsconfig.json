{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["es2019", "dom"],
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "outDir": "./lib",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "paths": {
      "~shared/*": ["./src/shared/*"],
      "~api/*": ["./src/api/*"],
      "~client/*": ["./src/client/*"]
    }
  },
  "include": [
    "types",
    ".storybook",
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
