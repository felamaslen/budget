{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "~api/*": ["./api/src/*"],
      "~client/*": ["./web/src/*"]
    }
  },
  "include": [
    "types",
    "web/src",
    "api/src",
    "api/migrations",
    "scripts",
    "seeds",
    "migrations"
  ],
  "exclude": [
    "node_modules"
  ]
}
