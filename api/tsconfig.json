{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["es2015"],
    "baseUrl": ".",
    "outDir": "./build",
    "typeRoots": ["../types", "../node_modules/@types"],
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "paths": {
      "~api/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
