{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": false,
    "noEmit": false,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "typeRoots": ["../types", "../node_modules/@types"],
    "paths": {
      "~client/*": ["./src/*"]
    }
  },
  "include": [
    "../types",
    "src/**/*"
  ]
}
